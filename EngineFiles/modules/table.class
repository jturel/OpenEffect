<?

#
# Table class
#
#####################################
  
  class table extends linkClass {
  
     // Constructor
     function table($width = "100%", $border = 1, $cellpadding = 3, $cellspacing = 0) {
        $this->linkClass();
	
	// set variables
	$this->options["width"]       = $width;
	$this->options["border"]      = $border;
	$this->options["cellpadding"] = $cellpadding;
	$this->options["cellspacing"] = $cellspacing;
     }
     
     
     // Form tags 
     function formTags() {
        $this->tag  = "";
	$this->sTag = $this->formStartTag();
	$this->fTag = $this->formFinishTag();
     }
     
     
     // Form start tag
     function formStartTag() {
        $out  = "<TABLE";
	$opt  = $this->optionsTOhtml();
	if ($opt)               $out .= " ".$opt;
	if ($this->htmlOptions) $out .= " ".$this->htmlOptions;
	$out .= ">\n";
	
	$out  = $this->delDoubleChars($out, " ");
	return $out;
     }

     
     // Form finish tag
     function formFinishTag() {
        $out = "</TABLE>\n";
	return $out;
     }
     
  }
 
?>