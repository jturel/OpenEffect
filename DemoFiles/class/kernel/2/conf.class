#
#  Configuration string class
#

  
  // Configuration  
  class confStringClass extends streamItemClass {
     var $className = "confStringClass";
     var $value = "";
     
     // Set value
     function set($value) {
               $value = trim($value);
               //if (ereg("^'.*'", $value, $val)) {         // Check if string start with _'_ symbol
               if (preg_match("/^'.*'/", $value, $val)) {         // Check if string start with _'_ symbol
                  $value = substr($val[0], 1, strlen($val[0]) - 2);
               } elseif (preg_match("/^\".*\"/", $value, $val)) { // Check if string start with _"_ symbol
               //} elseif (ereg("^\".*\"", $value, $val)) { // Check if string start with _"_ symbol
                  $value = substr($val[0], 1, strlen($val[0]) - 2);
               } else { 
                  if (is_array($val = preg_split("(;|#|//|\[)", $value)))
                  //if (is_array($val = split("(;|#|//|\[)", $value)))
                     $value = trim($val[0]);
                                               
                  //if (ereg(",", $value)) {               // Explode string if have ','
                  if (preg_match("/,/", $value)) {               // Explode string if have ','
                     $value = explode(",", $value);
                     for ($Cn = 0; $Cn < count($value); $Cn++)
                                $value[$Cn] = trim($value[$Cn]);
                  }
               }
               
               $this->value = $value;
     }
     
     // Get value
     function get() {
        return $this->value;
     }
     
     // Get Key
     function getKey() {
        return $this->key;
     }
     
  }
 
